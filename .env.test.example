# Environment: Test
# Copy this file to .env.test and fill in your values

# Database (use a separate test database)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mydb_test?schema=public"

# Authentication (use test-specific values)
NEXTAUTH_SECRET="test-secret-do-not-use-in-production-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"
# AUTH_PASSWORD: Test password for authentication
AUTH_PASSWORD="test-password-123"

# Test environment flags
NODE_ENV="test"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Disable telemetry in tests
NEXT_TELEMETRY_DISABLED=1

# Optional: Enable test logging
# LOG_LEVEL="error"

# Optional: Mock external services (recommended)
MOCK_EXTERNAL_SERVICES=true

# Optional: Test timeout settings
# JEST_TIMEOUT=10000
# PLAYWRIGHT_TIMEOUT=30000
